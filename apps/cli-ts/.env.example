# === LLM PROVIDER SELECTION ===
# One of: openai, claude, gemini, deepseek
SELECTED_LLM="openai"

# The specific model to use for the selected provider
# Examples:
# - openai: "gpt-4", "gpt-4o"
# - claude: "claude-3-opus-20240229"
# - gemini: "gemini-pro"
# - deepseek: "deepseek-coder"
LLM_MODEL="gpt-4o"


# === API KEYS FOR DIFFERENT PROVIDERS ===

# OpenAI (for ChatOpenAI)
OPENAI_API_KEY="your-openai-api-key"

# Claude (Anthropic) - for ChatAnthropic
CLAUDE_API_KEY="your-claude-api-key"

# Gemini (Google) - for ChatGoogleGenerativeAI
GEMINI_API_KEY="your-gemini-api-key"

# DeepSeek - for ChatDeepSeek
DEEPSEEK_API_KEY="your-deepseek-api-key"


# === GOOGLE SEARCH (via Custom Search API) ===
# Get this from: https://console.cloud.google.com/
# Instructions: https://developers.google.com/custom-search/v1/overview
GOOGLE_CSE_API_KEY="your-google-api-key"

# Get this from: https://programmablesearchengine.google.com/
# Instructions: https://programmablesearchengine.google.com/about/
GOOGLE_CSE_ID="your-search-engine-id"


# === LANGSMITH TRACING (optional) ===
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"
LANGSMITH_API_KEY="your-langsmith-api-key"
LANGSMITH_PROJECT="codr"
