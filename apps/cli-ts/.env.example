# === LLM SELECTION ===
# Choose one of: openai, claude, gemini, deepseek
SELECTED_LLM="openai"

# Choose one model depending on SELECTED_LLM:
# - openai:     gpt-4o | gpt-4 | gpt-3.5-turbo | gpt-4.1 | gpt-4.1-mini | gpt-4.1-nano
# - claude:     claude-3-opus | claude-3-sonnet | claude-3.5-sonnet-v2 | claude-3.7-sonnet | claude-4-sonnet-4 | claude-4-opus-4
# - gemini:     gemini-2.5-flash | gemini-2.5-pro | gemini-2.5-flash-lite | gemini-2.0-flash | gemini-2.0-flash-lite
# - deepseek:   deepseek-chat | deepseek-coder
LLM_MODEL="gpt-4o"

# === API KEYS PER LLM PROVIDER ===

# OpenAI API key
# Get from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY="your-oepnai-api-key"

# Claude (Anthropic) API key
# Get from: https://console.anthropic.com/settings/keys
CLAUDE_API_KEY="your-claude-api-key"

# Gemini (Google AI Studio) API key
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key"

# DeepSeek API key
# Get from: https://platform.deepseek.com/user-center/api-key
DEEPSEEK_API_KEY="your-deepseek-api-key"


# === GOOGLE SEARCH (via Custom Search API) ===

# Google Programmable Search API Key
# Get from: https://console.cloud.google.com/
# Guide: https://developers.google.com/custom-search/v1/overview
GOOGLE_CSE_API_KEY="your-google-api-key"

# Search Engine ID
# Create at: https://programmablesearchengine.google.com/
# Guide: https://programmablesearchengine.google.com/about/
GOOGLE_CSE_ID="your-search-engine-id"


# === LANGSMITH TRACING (optional) ===
# Docs: https://docs.smith.langchain.com
LANGSMITH_TRACING= # true/false
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"
LANGSMITH_API_KEY="your-langsmith-api-key"
LANGSMITH_PROJECT="codr"
